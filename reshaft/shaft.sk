command /statcheck [<player>]:
	trigger:
		if player is not op:
			stop
		if arg-1 is not set:
			send "{@admin} &7/statcheck <player>"
			stop
		if {p_level::%arg-1%} is not set:
			set {p_level::%arg-1%} to 1
		if {p_exp::%arg-1%} is not set:
