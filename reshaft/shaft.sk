command /tps:
	trigger:
		set {_tps} to tps from the last 1 minute
		set {_t} to roundto({_tps}, 2)
		if {_t} >= 19:
			send "{@shaft} &a%{_t}% &7TPS"
		else if {_t} >= 16:
			send "{@shaft} &x&d&5&5&6&5&6%{_t}% &7TPS"
		else:
			send "{@shaft} &c%{_t}% &7TPS"

