function orcDrop(l: location):
    chance of 90%:
        drop (random integer between 1 and 5) of {mobloot::bone} at {_l}
    chance of 20%:
        drop (random integer between 1 and 3) of {mobloot::br_mush} at {_l}
    chance of 30%:
        drop (random integer between 2 and 6) of {mobloot::flesh} at {_l}
    chance of 5%:
        drop (random integer between 1 and 3) of {mobloot::red_mush} at {_l}

function boneDrop(l: location):
    chance of 90%:
        drop (random integer between 3 and 6) of {mobloot::bone} at {_l}
    chance of 5%:
        drop 1 of {mobloot::skel_skull} at {_l} 
    chance of 20%:
        drop (random integer between 2 and 4) of {mobloot::bush} at {_l}

function elfDrop(l: location):
